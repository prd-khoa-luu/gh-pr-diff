{
  "manifest_version": 3,
  "name": "GitHub PR Diff Comparator",
  "version": "1.0",
  "description": "Compare the diffs of two GitHub pull requests.",
  "permissions": [
    "activeTab",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "https://api.github.com/",
    "https://github.com/",
    "https://patch-diff.githubusercontent.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}