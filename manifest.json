{
  "manifest_version": 2,
  "name": "GitHub PR Diff Comparator",
  "version": "1.0",
  "description": "Compare the diffs of two GitHub pull requests.",
  "permissions": [
    "activeTab",
    "https://api.github.com/"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}